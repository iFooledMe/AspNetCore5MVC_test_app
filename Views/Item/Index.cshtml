@model IEnumerable<AspNetCore5MVC_test_app.Models.Item>


    <div class="container p-3">

        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Items List</h2>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-primary text-white" style="width:30%" asp-area="" asp-controller="Item" asp-action="CreateItem">Add Item</a>
            </div>
        </div>
        <br />

        @if(Model.Count() > 0) 
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Borrower
                        </th>
                        <th>
                            Lender
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Borrower</td>
                        <td>@item.Lender</td>
                    </tr>
                    }
                </tbody>
            </table>
        }



    </div>