@model IEnumerable<AspNetCore5MVC_test_app.Models.Expence>


<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expences</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" style="width:30%" asp-area="" asp-controller="Expences" asp-action="CreateExpence">Add Expence</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expence
                    </th>
                    <th>
                        Sum
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Item</td>
                    <td>@item.Sum</td>
                    <td width="20%" class="text-right">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-primary text-white mx-1" asp-area="" asp-controller="Expences" asp-action="UpdateExpence" asp-route-Id="@item.Id">Edit</a>
                            <a class="btn btn-danger text-white mx-1" asp-area="" asp-controller="Expences" asp-action="DeleteExpence" asp-route-Id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else 
    {
        <p class="pt-5 mt-5">No Expences Added yet!</p>
    }




</div>

